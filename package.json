{
  "name": "angular-highcharts",
  "version": "1.0.0",
  "description": "Highcharts Directive for Angular2",
  "main": "dist/bundles/angular-highcharts.umd.js",
  "module": "dist/index.js",
  "typings": "dist/index.d.ts",
  "scripts": {
    "prepublish": "npm run build",
    "clean": "rimraf index.js index.d.ts src/**/*.js src/**/*.d.ts",
    "prebuild": "rimraf dist",
    "build": "ngc && rollup -c",
    "lint": "tslint src/**/*.ts",
    "test": "npm run lint"
  },
  "author": "Felix Itzenplitz",
  "repository": {
    "type": "git",
    "url": "https://github.com/cebor/angular-highcharts.git"
  },
  "keywords": [
    "angular2",
    "ng2",
    "highcharts",
    "chart",
    "directive",
    "component"
  ],
  "license": "MIT",
  "devDependencies": {
    "@angular/compiler-cli": "^2.4.3",
    "@angular/core": "2.4.3",
    "@types/highcharts": "^4.2.45",
    "rimraf": "^2.5.4",
    "rollup": "^0.41.1",
    "rxjs": "^5.0.3",
    "tslint": "^4.3.1",
    "typescript": "~2.1.5",
    "zone.js": "^0.7.5"
  }
}
